# Set shell to POSIX sh for maximum portability
shell=sh

# Enable POSIX compliance checks
enable=all
enable=avoid-nullary-conditions
enable=check-unassigned-uppercase
enable=deprecate-which
enable=quote-safe-variables

# Disable non-POSIX features
disable=SC2039  # Word splitting
disable=SC3043  # Local declaration
disable=SC3044  # Arrays
disable=SC3045  # Brace expansion
disable=SC3046  # String concatenation
disable=SC3047  # Arithmetic expansion
disable=SC3048  # Command substitution

# Source handling
source-path=SCRIPTDIR
external-sources=true

# Error handling
error-level=style
severity=style

# Required checks
require=Double-quote-variables
require=quote-safe-variables
require=Declare-variables
require=Check-exit-code
