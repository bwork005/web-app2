# Development build configuration

CC = gcc
ARCH_FLAGS = -march=native
OPT_FLAGS = -O0 -ggdb3 -fno-omit-frame-pointer -fno-inline
DEBUG_FLAGS = -DDEBUG

CFLAGS = $(SHARED_FLAGS) \
		 $(ARCH_FLAGS) \
		 $(OPT_FLAGS) \
		 $(DEBUG_FLAGS)

LDFLAGS = -static -pthread -lssl -lcrypto

# Use project root as prefix
DEV_PREFIX = .

# Development targets - simplified
dev-install: all
	@echo "Installing in development environment..."
	@chmod 755 bin/app

dev-setup:
	@echo "Development environment already configured."

clean-dev:
	@echo "Cleaning development environment..."
	@rm -f $(OBJ_DIR)/*.o
	@rm -f $(BIN_DIR)/app
