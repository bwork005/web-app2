# Server Configuration
SERVER_PORT=8443
SERVER_HOST=localhost
MAX_CONNECTIONS=100

# SSL Configuration
SSL_CERT_FILE=${BASE_PATH}/etc/ssl/cert.pem
SSL_KEY_FILE=${BASE_PATH}/etc/ssl/privkey.pem

# Database Configuration
DB_FILE=${BASE_PATH}/var/lib/records.rec
DB_SCHEMA=../var/lib/database.descr

# Logging Configuration
LOG_FILE=${BASE_PATH}/var/log/app.log
LOG_LEVEL=debug
LOG_PATH=${BASE_PATH}/var/log/app.log

# Authentication Configuration
AUTH_FILE=${BASE_PATH}/etc/auth/passwd

# Audit Configuration
AUDIT_PATH=${BASE_PATH}/var/log/audit.log

# Security Settings
MIN_PASSWORD_LENGTH=12
PASSWORD_EXPIRY_DAYS=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Session Settings
SESSION_TIMEOUT=3600
MAX_SESSIONS=1000

# CORS Settings
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=Content-Type,Authorization

# Application Metadata
APP_NAME=EnvEng-Web
APP_DOMAIN=localhost

# QUIC Configuration
QUIC_MAX_STREAMS=10
QUIC_TIMEOUT_MS=30000
QUIC_MTU_SIZE=1452

# Base paths (relative to binary)
BASE_PATH=..
