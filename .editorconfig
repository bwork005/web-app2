# Top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Rust files - 2018 edition style
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# Web files - ES9/HTML5/CSS3
[*.{js,jsx,mjs}]
indent_size = 2
max_line_length = 100
quote_type = single

[*.{html,htm}]
indent_size = 2
max_line_length = 120

[*.{css,scss}]
indent_size = 2
max_line_length = 120

# Configuration files
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2

# Database files
[*.pdb]
charset = binary
end_of_line = unset
