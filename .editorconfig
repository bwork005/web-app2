# EditorConfig is awesome: https://editorconfig.org

# Root EditorConfig file for EnvEng WebApp project
root = true

# Default settings for all files
[*]
charset = utf-8                # Use UTF-8 encoding
end_of_line = lf               # Use LF for line endings
indent_style = space           # Use spaces for indentation
indent_size = 4                # Indent with 4 spaces
insert_final_newline = true    # Ensure files end with a newline
trim_trailing_whitespace = true # Remove trailing whitespace

# Specific settings for C and header files
[*.{c,h}]
max_line_length = 80           # Limit lines to 80 characters
quote_type = double            # Prefer double quotes for strings
